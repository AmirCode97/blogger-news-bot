  <b:skin><![CDATA[
  /* Required minimal skin */
  body { margin: 0; }
  ]]></b:skin>
  
  <style type='text/css'>
    @import url(https://fonts.googleapis.com/css2?family=Vazirmatn:wght@400;600;700&amp;display=swap);
    
    *, *::before, *::after { box-sizing: border-box; margin: 0; padding: 0; }
    
    body {
      font-family: Vazirmatn, Tahoma, sans-serif;
      background: #0d0d1a;
      color: #fff;
      direction: rtl;
      line-height: 1.8;
    }
    
    a { color: inherit; text-decoration: none; }
    
    .header {
      background: linear-gradient(to left, #1a1a2e, #16213e);
      padding: 20px;
      border-bottom: 3px solid #e94560;
    }
    
    .header-inner {
      max-width: 1200px;
      margin: auto;
      display: flex;
      align-items: center;
      justify-content: space-between;
      flex-wrap: wrap;
      gap: 20px;
    }
    
    .logo {
      display: flex;
      align-items: center;
      gap: 15px;
    }
    
    .logo img {
      width: 50px;
      height: 50px;
      border-radius: 10px;
    }
    
    .logo span {
      font-size: 24px;
      font-weight: 700;
      color: #e94560;
    }
    
    .nav { display: flex; gap: 15px; flex-wrap: wrap; }
    
    .nav a {
      background: rgba(255,255,255,0.1);
      padding: 10px 20px;
      border-radius: 8px;
      transition: 0.3s;
    }
    
    .nav a:hover { background: #e94560; }
    
    .content {
      max-width: 1200px;
      margin: 40px auto;
      padding: 0 20px;
    }
    
    .title-section {
      font-size: 28px;
      color: #e94560;
      margin-bottom: 30px;
      border-bottom: 2px solid #e94560;
      padding-bottom: 10px;
    }
    
    .posts {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
      gap: 25px;
    }
    
    .post-item {
      background: #1a1a2e;
      border-radius: 15px;
      overflow: hidden;
      transition: 0.3s;
    }
    
    .post-item:hover {
      transform: translateY(-5px);
      box-shadow: 0 15px 40px rgba(233,69,96,0.2);
    }
    
    .post-thumb {
      height: 200px;
      background: #16213e;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 50px;
      color: #e94560;
    }
    
    .post-thumb img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
    
    .post-info {
      padding: 20px;
    }
    
    .post-label {
      background: #e94560;
      padding: 5px 12px;
      border-radius: 20px;
      font-size: 12px;
      display: inline-block;
      margin-bottom: 10px;
    }
    
    .post-title {
      font-size: 18px;
      font-weight: 600;
      margin-bottom: 10px;
      line-height: 1.5;
    }
    
    .post-title:hover { color: #e94560; }
    
    .post-desc {
      color: #999;
      font-size: 14px;
      margin-bottom: 15px;
    }
    
    .read-btn {
      color: #e94560;
      font-weight: 600;
    }
    
    .single {
      max-width: 800px;
      margin: auto;
    }
    
    .single h1 {
      font-size: 32px;
      margin-bottom: 20px;
    }
    
    .single img {
      width: 100%;
      border-radius: 15px;
      margin-bottom: 25px;
    }
    
    .single-body {
      font-size: 18px;
      line-height: 2;
    }
    
    .single-body p { margin-bottom: 20px; }
    
    .back-btn {
      display: inline-block;
      color: #e94560;
      margin-bottom: 25px;
    }
    
    .pager {
      display: flex;
      justify-content: center;
      gap: 20px;
      margin-top: 40px;
    }
    
    .pager a {
      background: #e94560;
      padding: 12px 25px;
      border-radius: 8px;
    }
    
    .footer {
      background: #1a1a2e;
      padding: 30px;
      text-align: center;
      margin-top: 50px;
      color: #666;
    }
    
    @media (max-width: 600px) {
      .header-inner { flex-direction: column; }
      .posts { grid-template-columns: 1fr; }
    }
  </style>
</head>

